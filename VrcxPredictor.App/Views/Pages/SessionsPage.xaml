<Page x:Class="VrcxPredictor.App.Views.Pages.SessionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="Sessions">

    <Grid Margin="16">
        <ui:CardControl Padding="16" HorizontalContentAlignment="Left" VerticalContentAlignment="Stretch">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="会话列表" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding SessionCount, StringFormat=({0} 条)}" Opacity="0.75" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>

                <DataGrid Grid.Row="1" Margin="0,12,0,0"
                          AutoGenerateColumns="False"
                          ItemsSource="{Binding Sessions}"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          RowHeight="34"
                          CanUserSortColumns="True"
                          FlowDirection="LeftToRight"
                          ColumnWidth="Auto"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Stretch"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="开始" Binding="{Binding Start, StringFormat={}{0:G}}" Width="200" />
                        <DataGridTextColumn Header="结束" Binding="{Binding End, StringFormat={}{0:G}}" Width="200" />
                        <DataGridTextColumn Header="时长(小时)" Binding="{Binding DurationHours, StringFormat={}{0:0.00}}" Width="120" />
                        <DataGridCheckBoxColumn Header="进行中" Binding="{Binding IsOpen}" Width="80" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </ui:CardControl>
    </Grid>
</Page>
